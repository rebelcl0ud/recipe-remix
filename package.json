{
  "name": "recipe-remix",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "generate-env": "npx tsx scripts/generate-env.ts",
    "test": "vitest --config vite.config.test.ts",
    "build": "remix vite:build && tsc -p tsconfig.build.json",
    "dev": "NODE_OPTIONS='--loader ts-node/esm' ts-node server.ts",
    "start": "cross-env NODE_ENV=production node build/server.js",
    "typecheck": "tsc --noEmit",
    "lint": "npx eslint .",
    "format:check": "npx prettier . --check",
    "format:write": "npx prettier . --write",
    "prepare": "husky",
    "lint:staged": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "vitest related --config vite.config.test.ts",
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "prisma": {
    "seed": "npx tsx prisma/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "description": "",
  "dependencies": {
    "@prisma/client": "^6.7.0",
    "@remix-run/express": "^2.16.5",
    "@remix-run/node": "^2.16.5",
    "@remix-run/react": "^2.16.5",
    "@tailwindcss/vite": "^4.1.7",
    "bcrypt": "^6.0.0",
    "cross-env": "^7.0.3",
    "express": "^4.21.2",
    "isbot": "^4.4.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^4.1.7",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@remix-run/dev": "^2.16.5",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.1",
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "prettier": "3.5.3",
    "prisma": "^6.7.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vite": "^6.3.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.3"
  }
}
